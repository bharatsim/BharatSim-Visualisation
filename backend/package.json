{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for visualization",
  "main": "index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "test": "jest  --coverage --env=node --watchAll=false",
    "start": "nodemon app.js",
    "start:prod": "NODE_ENV=production nodemon app.js",
    "lint": "eslint src test",
    "format": "prettier src test",
    "fix": "eslint src test --fix && prettier src test --write ",
    "start-db": "docker-compose up -d",
    "dev": "yarn start-db && yarn start"
  },
  "lint-staged": {
    "*.{js,jsx,css,html,md,json,test.jsx,test.js}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mathjs": "^9.4.2",
    "mongodb": "^3.6.3",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "papaparse": "^5.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.0"
    }
  }
}
